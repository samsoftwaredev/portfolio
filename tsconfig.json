{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["components/*"],
      "@/components": ["components/index"],
      "@/layout/*": ["layout/*"],
      "@/layout": ["layout/index"],
      "@/styles/*": ["styles/*"],
      "@/styles": ["styles/index"],
      "@/pages/*": ["pages/*"],
      "@/pages": ["pages/index"],
      "@/constants/*": ["constants/*"],
      "@/constants": ["constants/index"],
      "@/public/*": ["public/*"],
      "@/public": ["public/index"],
      "@/utils/*": ["utils/*"],
      "@/utils": ["utils/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
